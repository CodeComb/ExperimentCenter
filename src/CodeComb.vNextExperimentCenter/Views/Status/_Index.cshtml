@model IEnumerable<Status>
@{ 
    Layout = null;
}
@foreach(var x in Model)
{
    <tr>
        <td class="center"><a asp-action="Show" asp-controller="Status" asp-route-id="@x.Id">@Html.ColorStatus(x.Result)</a></td>
        @if (x.Total > 0)
        {
            if (x.Total != x.Accepted)
            {
                <td class="center status-has-error">@(x.Total - x.Accepted)</td>
            }
            else
            {
                <td class="center status-accepted">@(x.Total - x.Accepted)</td>
            }
        }
        else
        {
            <td class="center">N/A</td>
        }
        <td class="center">@x.TimeUsage</td>
        <td class="center">@x.MemoryUsage</td>
        <td class="status-experiment"><a asp-action="Show" asp-controller="Experiment" asp-route-id="@x.ProblemId">E@(x.Problem.Id) @x.Problem.Title</a></td>
        <td class="right status-author"><a asp-action="Show" asp-controller="Account" asp-route-id="@x.UserId">@await Html.ColorUserNameAsync(x.User)</a></td>
        <td class="center">@x.Time.ToString("yyyy-MM-dd HH:mm:ss")</td>
    </tr>
}