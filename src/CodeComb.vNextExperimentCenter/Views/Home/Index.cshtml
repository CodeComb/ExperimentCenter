@{ 
    Layout = null;
    ViewBag.Title = "首页";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="referrer" content="origin" />
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewBag.Title - vNext China</title>
    <link href="~/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/styles/monokai_sublime.css" rel="stylesheet" />
    <link href="~/styles/screen.css" rel="stylesheet" />
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/main.js"></script>
    <script src="~/scripts/plugins.js"></script>
</head>
<body class="paged archive-template fixed-navbar">
    <!-- start header -->
    <header class="main-header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="material-icons">&#xE5D2;</i>
                    </button>
                    <!-- start logo -->
                    <a class="navbar-brand text-logo" asp-controller="Home" asp-action="Index">vNext CN</a>
                    <!-- end logo -->
                </div>
                @Html.Partial("_Navigator")
            </div>
        </nav>
    </header>
    <!-- end header -->

    <div class="cover cover-home">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="welcome-message">欢迎来到 vNext China</h1>
                    <p class="h4 description">在线实例测试、技术交流、开发比赛、免费的持续集成平台</p>
                </div>
            </div>
        </div>
    </div><div class="main-content-area">
        <div class="container">
            <div class="cont-wrap">
                <div class="grid_9">
                    <h2>近期比赛</h2>
                    <div class="block-outer">
                        <div class="block blue">
                            <h2>vNext Test Round #1</h2>
                            <p class="small"><span>2015-10-30 10:00 ~ 2015-10-30 12:00</span></p>
                            <p>123456</p>
                        </div>
                        <div class="block yellow">
                            <h2>vNext Test Round #1</h2>
                            <p class="small"><span>2015-10-30 10:00 ~ 2015-10-30 12:00</span></p>
                            <p>123456</p>
                        </div>
                        <div class="block red">
                            <h2>vNext Test Round #1</h2>
                            <p class="small"><span>2015-10-30 10:00 ~ 2015-10-30 12:00</span></p>
                            <p>123456</p>
                        </div>
                        <div class="block green">
                            <h2>vNext Test Round #1</h2>
                            <p class="small"><span>2015-10-30 10:00 ~ 2015-10-30 12:00</span></p>
                            <p>123456</p>
                        </div>
                        <div class="block">
                            <h2>vNext Test Round #1</h2>
                            <p class="small"><span>2015-10-30 10:00 ~ 2015-10-30 12:00</span></p>
                            <p>123456</p>
                        </div>
                    </div>
                </div>
                <div class="grid_3">
                    <h2>推荐资料</h2>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
    <a href="#" id="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div class="search-popup">
        <div class="close-button">
            <i class="material-icons">&#xE5C9;</i>
        </div>
        <div class="container popup-inner">
            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="input-group">
                            <input type="email" class="required" id="search-input">
                            <span class="bar"></span>
                            <label>Type to search</label>
                        </div>
                        <!-- <input type="text"  placeholder="" /> -->
                    </form>
                    <div id="search-results">

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
